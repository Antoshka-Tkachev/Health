<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/night"
    tools:context=".FragmentSleep">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/background_container_sleep" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/timeSleep"
                android:textColor="@color/blueDarkDark"
                android:textSize="35sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_duringSleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/duringSleep"
                android:textColor="@color/blueDarkDark"
                android:textSize="60sp"
                android:textStyle="bold"
                android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:background="@drawable/background_container_sleep" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:text="@string/indicate"
                android:textColor="@color/blueDarkDark"
                android:textSize="25sp"
                android:gravity="left"/>

            <TextView
                android:id="@+id/tv_fallingAsleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:text="@string/fallingAsleep"
                android:textColor="@color/blueDarkDark"
                android:textSize="25sp"
                android:background="@drawable/background_textview_sleep"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_wakingUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:text="@string/wakingUp"
                android:textColor="@color/blueDarkDark"
                android:textSize="25sp"
                android:background="@drawable/background_textview_sleep"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_saveTimeSleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="@string/saveTimeSleep"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/background_button_sleep"/>

    </LinearLayout>

        <Button
            android:id="@+id/btn_dateRecordsSleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:text="@string/dateRecordsSleep"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/background_button_sleep"/>

        <Button
            android:id="@+id/btn_statisticsSleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:text="@string/statisticsSleepFragment"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/background_button_sleep"/>

        <Button
            android:id="@+id/btn_recommendationsSleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/recommendationsSleep"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/background_button_sleep"/>

    </LinearLayout>
</ScrollView>