<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ActivityNutrControlStatistics">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:orientation="horizontal"
            android:background="@color/blue"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_backscapeNCStat"
                android:onClick="onClickBackscapeNCStat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_backscape"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/statisticsNutr"
                android:textColor="@color/white"
                android:textSize="23sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:elevation="5dp">

            <ToggleButton
                android:id="@+id/tbtn_proteinNCStat"
                android:onClick="onClickProteinNCStat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="@string/protein"
                android:textOff="@string/protein"
                android:textColor="@color/white"
                android:background="@drawable/background_button_statistic_water1"
                android:textSize="20sp"
                android:textAllCaps="false"/>

            <ToggleButton
                android:id="@+id/tbtn_fatNCStat"
                android:onClick="onClickFatNCStat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="@string/fat"
                android:textOff="@string/fat"
                android:textColor="@color/white"
                android:background="@drawable/background_button_statistic_water2"
                android:textSize="20sp"
                android:textAllCaps="false"/>

            <ToggleButton
                android:id="@+id/tbtn_carbohydrateNCStat"
                android:onClick="onClickCarbohydrateNCStat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="@string/carbohydrate"
                android:textOff="@string/carbohydrate"
                android:textColor="@color/white"
                android:background="@drawable/background_button_statistic_water2"
                android:textSize="20sp"
                android:textAllCaps="false"/>

            <ToggleButton
                android:onClick="onClickCaloriesNCStat"
                android:id="@+id/tbtn_caloriesNCStat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="@string/calories"
                android:textOff="@string/calories"
                android:textColor="@color/white"
                android:background="@drawable/background_button_statistic_water3"
                android:textSize="20sp"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:elevation="5dp">

            <ToggleButton
                android:id="@+id/tbtn_yearNCStat"
                android:onClick="onClickYearNCStat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="@string/year"
                android:textOff="@string/year"
                android:textColor="@color/white"
                android:background="@drawable/background_button_statistic_water1"
                android:textSize="20sp"
                android:textAllCaps="false"/>

            <ToggleButton
                android:id="@+id/tbtn_monthNCStat"
                android:onClick="onClickMonthNCStat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="@string/month"
                android:textOff="@string/month"
                android:textColor="@color/white"
                android:background="@drawable/background_button_statistic_water2"
                android:textSize="20sp"
                android:textAllCaps="false"/>

            <ToggleButton
                android:onClick="onClickWeekNCStat"
                android:id="@+id/tbtn_weekNCStat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="@string/week"
                android:textOff="@string/week"
                android:textColor="@color/white"
                android:background="@drawable/background_button_statistic_water3"
                android:textSize="20sp"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_lastNCStat"
                android:onClick="onClickLastNCStat"
                android:src="@drawable/ic_chevron_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tv_diapasonNCStat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/diapason"
                android:textSize="20sp"
                android:textColor="@color/blueDarkDark"
                android:textAllCaps="false"/>

            <ImageButton
                android:id="@+id/ib_nextNCStat"
                android:onClick="onClickNextNCStat"
                android:src="@drawable/ic_chevron_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dateNCStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/dateExample"
                android:textSize="20sp"
                android:textColor="@color/blueDarkDark"/>

            <TextView
                android:id="@+id/tv_valueNCStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/valueWater"
                android:textSize="35sp"
                android:textColor="@color/blueDarkDark"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_barChartNCStat"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/white"/>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:columnCount="2"
            app:orientation="horizontal"
            android:elevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                android:gravity="center"
                android:text="@string/total"
                android:textSize="20sp"
                android:textColor="@color/blueDarkDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                android:gravity="center"
                android:text="@string/average"
                android:textSize="20sp"
                android:textColor="@color/blueDarkDark"/>

            <TextView
                android:id="@+id/tv_sumNCStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_gravity="center"
                android:gravity="center"
                android:text="@string/_20_000"
                android:textSize="35sp"
                android:textColor="@color/blueDarkDark"/>

            <TextView
                android:id="@+id/tv_averageNCStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_gravity="center"
                android:gravity="center"
                android:text="@string/_1950"
                android:textSize="35sp"
                android:textColor="@color/blueDarkDark"/>

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</ScrollView>