<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="25dp"/>
                    <solid android:color="@color/blue" />
                </shape>

            </item>
            <item
                android:top="2dp"
                android:right="2dp"
                android:left="2dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="23dp"/>
                    <solid android:color="@color/blueLight" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="25dp"/>
                    <solid android:color="@color/blue" />
                </shape>

            </item>
            <item
                android:top="2dp"
                android:right="2dp"
                android:left="2dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="23dp"/>
                    <solid android:color="@color/blueLightLight" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>