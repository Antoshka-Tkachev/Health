<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.health">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SplashScreenLauncher">
        <activity android:name="com.application.health.ActivityDescription"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.health.ActivityRecommendationSleep"
            android:label="@string/title_activity_recommendation_sleep"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenLauncher.NoActionBar" />
        <activity
            android:name="com.application.health.ActivitySettingsProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.health.ActivityWeightStatistics"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.health.ActivityNutrControlStatistics"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.health.ActivityAddingDayMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.health.ActivityRecommendedMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.health.ActivityFoodMenuPager"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.health.ActivitySleepStatistics"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.health.ActivityImageSelection"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.health.ActivityWaterStatistics"
            android:screenOrientation="portrait"
            android:theme="@style/HomeActivity" />
        <activity
            android:name="com.application.health.ActivityHome"
            android:screenOrientation="portrait"
            android:theme="@style/HomeActivity" />
        <activity
            android:name="com.application.health.ActivityRegistration"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.health.ActivityAuthorization"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.application.health.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>